{
  "components": {
    "ansible": {
      "type": "ansible",
      "name": "ansible-core",
      "aliases": [
        "ansible"
      ],
      "default": true,
      "add-to-path": true,
      "runner": {
        "install": true
      },
      "required-packages": [
        {
          "type": "apt",
          "name": "git"
        }
      ]
    },
    "pbtn-infra": {
      "type": "ansible-collection",
      "url": "git+https://github.com/pablintino/pbtn.infra.git",
      "name": "pbtn.infra",
      "system-wide": true,
      "depends-on": "ansible",
      "required-packages": [
        {
          "type": "apt",
          "name": "tar"
        }
      ]
    }
  }
}